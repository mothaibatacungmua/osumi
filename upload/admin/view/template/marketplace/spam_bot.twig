{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card mb-3">
      <div class="card-header"><i class="fas fa-question-circle"></i> {{ text_instruction }}</div>
      <div class="card-body">
        <p>{{ text_spam_bot }}</p>
        <form>
          <div class="form-group row required">
            <div class="col-sm-5">
              <div class="form-group custom-file">
                <input type="file" class="form-control custom-file-input" id="inputGroupFile01"
                  aria-describedby="inputGroupFileAddon01">
                <label class="form-control custom-file-label" for="inputGroupFile01">Choose file</label>
              </div>
            </div>
            <div class="col-sm-2">
              <input class="btn btn-primary mb-2" type="button" value="Send">
            </div>
          </div>
          <div class="form-group row required">
            <div class="col-sm-10">
              <input type="text" name="subject" value="" placeholder="{{ entry_subject }}" id="input-subject" class="form-control"/>
            </div>
          </div>
          <div class="form-group row required">
            <div class="col-sm-10">
              <textarea name="message" placeholder="{{ entry_message }}" id="input-message" data-toggle="ckeditor" data-lang="{{ ckeditor }}" class="form-control"></textarea>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript"><!--
$('textarea[data-toggle=\'ckeditor\']').ckeditor();
//--></script>

{{ footer }}