<div class="content_part">
  <div class="container">
    <div id="content" class="col-sm-12">
      <div class="box featured home-product">
        {# <div><h3>{{ heading_title }}</h3> #}
        <div class="box-content clearfix">
          <div class="box-featured row">
            {% for product in products %}
              <div class="product-layout col-sm-3">
                <div class="product-thumb transition">
                  <div class="image"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-fluid"/></a>
                  {% if product.rating %}
                    <div class="rating">
                      {% for i in range(1, 5) %}
                        {% if product.rating < i %}
                          <span class="fa fa-stack"><i class="fa  fa-star fa-star-o fa-stack-2x"></i></span>
                        {% else %}
                          <span class="fa fa-stack">
                            <i class="fa fa-star-o fa-stack-2x"></i>
                            <i class="fa fa-star fa-stack-2x"></i>
                          </span>
                        {% endif %}
                      {% endfor %}
                    </div>
                  {% endif %}
                  </div>
                  <div class="caption clearfix">
                    <div class="name"><a href="{{ product.href }}">{{ product.name }}</a></div>
                    <p>{{ product.description }}</p>
                    <div class="caption-right">
                      {% if product.price %}
                        <div class="price">
                          {% if not product.special %}
                            {{ product.price }}
                          {% else %}
                            <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>
                          {% endif %}
                          {# {% if product.tax %}
                            <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
                          {% endif %} #}
                        </div>
                      {% endif %}
                    </div>
                    <div class="cart-button">
                        <button class="btn btn-add" type="button" onclick="cart.add('{{ product.product_id }}');"><i class="fas fa-shopping-cart"></i> <span class="d-none d-lg-inline">{{ button_cart }}</span></button>
                    </div>
                  </div>
                  
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

